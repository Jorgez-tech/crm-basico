{
  "name": "crm-basico",
  "version": "1.0.0",
  "description": "Sistema CRM básico para gestión de contactos y clientes pequeños negocios",
  "main": "app/main.js",
  "scripts": {
    "start": "node app/main.js",
    "dev": "nodemon app/main.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration.test.js --detectOpenHandles --forceExit",
    "test:e2e": "node tests/e2e-edit.js",
    "test:csrf": "node tests/csrf-check.js",
    "lint": "eslint . || true",
    "lint:fix": "eslint . --fix || true",
    "format": "prettier --write . || true",
    "cache:bust": "echo 'force cache clear'"
  },
  "keywords": [
    "crm",
    "contactos",
    "clientes",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "Jorge Zuta",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.1",
    "csurf": "^1.11.0",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "mysql2": "^3.11.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-node": "^11.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^2.8.8",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/main.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jorgez-tech/crm-basico.git"
  },
  "bugs": {
    "url": "https://github.com/Jorgez-tech/crm-basico/issues"
  },
  "homepage": "https://github.com/Jorgez-tech/crm-basico#readme"
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Editar Contacto - CRM B√°sico' %></title>
    <link rel="stylesheet" href="/css/styles.css?v=1.0.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>‚úèÔ∏è Editar Contacto</h1>
            <p>Modifica la informaci√≥n del contacto</p>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <!-- Mensajes de notificaci√≥n -->
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error fade-in">
                    ‚ùå <%= error %>
                </div>
            <% } %>

            <!-- Navegaci√≥n -->
            <div class="mb-xl">
                <a href="/" class="btn btn-outline">
                    ‚Üê Volver a la lista
                </a>
            </div>

            <!-- Formulario de edici√≥n -->
            <div class="card">
                <div class="card-header">
                    <h2>üìù Informaci√≥n del Contacto</h2>
                </div>
                <div class="card-body">
                    <form action="/contactos/<%= contacto.id %>" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        
                        <!-- Informaci√≥n b√°sica -->
                        <div class="form-row">
                            <div class="form-group">
                                <label for="nombre" class="form-label">Nombre *</label>
                                <input 
                                    type="text" 
                                    id="nombre" 
                                    name="nombre" 
                                    class="form-control" 
                                    placeholder="Nombre completo"
                                    value="<%= contacto.nombre %>"
                                    required
                                    minlength="2"
                                    maxlength="255"
                                    aria-labelledby="nombre-label"
                                >
                            </div>
                            <div class="form-group">
                                <label for="correo" class="form-label">Correo Electr√≥nico *</label>
                                <input 
                                    type="email" 
                                    id="correo" 
                                    name="correo" 
                                    class="form-control" 
                                    placeholder="ejemplo@correo.com"
                                    value="<%= contacto.correo %>"
                                    required
                                    aria-labelledby="correo-label"
                                >
                            </div>
                        </div>
                        
                        <!-- Informaci√≥n de contacto -->
                        <div class="form-row">
                            <div class="form-group">
                                <label for="telefono" class="form-label">Tel√©fono</label>
                                <input 
                                    type="tel" 
                                    id="telefono" 
                                    name="telefono" 
                                    class="form-control" 
                                    placeholder="+1 (555) 123-4567"
                                    value="<%= contacto.telefono || '' %>"
                                    oninput="CRM.formatPhoneInput(this)"
                                    aria-labelledby="telefono-label"
                                >
                            </div>
                            <div class="form-group">
                                <label for="empresa" class="form-label">Empresa</label>
                                <input 
                                    type="text" 
                                    id="empresa" 
                                    name="empresa" 
                                    class="form-control" 
                                    placeholder="Nombre de la empresa"
                                    value="<%= contacto.empresa || '' %>"
                                    maxlength="255"
                                    aria-labelledby="empresa-label"
                                >
                            </div>
                        </div>
                        
                        <!-- Estado y metadatos -->
                        <div class="form-row">
                            <div class="form-group">
                                <label for="estado" class="form-label">Estado</label>
                                <select id="estado" name="estado" class="form-control form-select" onchange="CRM.handleStatusChange(this)" aria-labelledby="estado-label">
                                    <option value="prospecto" <%= contacto.estado === 'prospecto' ? 'selected' : '' %>>
                                        üîç Prospecto
                                    </option>
                                    <option value="cliente" <%= contacto.estado === 'cliente' ? 'selected' : '' %>>
                                        ‚úÖ Cliente
                                    </option>
                                    <option value="inactivo" <%= contacto.estado === 'inactivo' ? 'selected' : '' %>>
                                        üò¥ Inactivo
                                    </option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Estado Actual</label>
                                <div style="padding: 12px 0;">
                                    <span class="status-badge <%= contacto.estado %>">
                                        <%= contacto.estado === 'prospecto' ? 'üîç Prospecto' : contacto.estado === 'cliente' ? '‚úÖ Cliente' : 'üò¥ Inactivo' %>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Informaci√≥n de fechas -->
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Fecha de Creaci√≥n</label>
                                <div class="form-control" style="background-color: #f8fafc; color: #6b7280;">
                                    üìÖ <%= new Date(contacto.fecha_creacion).toLocaleDateString('es-ES', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </div>
                            </div>
                            <% if (contacto.fecha_actualizacion && contacto.fecha_actualizacion !== contacto.fecha_creacion) { %>
                                <div class="form-group">
                                    <label class="form-label">√öltima Actualizaci√≥n</label>
                                    <div class="form-control" style="background-color: #f8fafc; color: #6b7280;">
                                        üîÑ <%= new Date(contacto.fecha_actualizacion).toLocaleDateString('es-ES', { 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        
                        <!-- Botones de acci√≥n -->
                        <div class="form-row mt-xl">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    üíæ Guardar Cambios
                                </button>
                                <a href="/" class="btn btn-outline">
                                    ‚ùå Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                <!-- Formulario de eliminar contacto (fuera del form de edici√≥n) -->
                <form action="/contactos/<%= contacto.id %>/eliminar" method="POST" style="display: inline; margin-top: 1rem;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger" data-tooltip="Eliminar este contacto permanentemente">
                        üóëÔ∏è Eliminar Contacto
                    </button>
                </form>
                </div>
            </div>

            <!-- Informaci√≥n adicional -->
            <div class="card">
                <div class="card-header">
                    <h2>üìä Informaci√≥n del Contacto</h2>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group">
                            <strong>ID del Contacto:</strong>
                            <p class="text-muted">#<%= contacto.id %></p>
                        </div>
                        <div class="form-group">
                            <strong>Enlace Directo:</strong>
                            <p class="text-muted">
                                <span onclick="CRM.copyToClipboard(window.location.origin + '/contactos/<%= contacto.id %>/editar')" 
                                      style="cursor: pointer; color: var(--color-primary);" 
                                      data-tooltip="Clic para copiar enlace">
                                    üîó /contactos/<%= contacto.id %>/editar
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- TODO: Secci√≥n para notas futuras -->
            <!--
            <div class="card">
                <div class="card-header">
                    <h2>üìù Notas e Interacciones</h2>
                </div>
                <div class="card-body">
                    <p class="text-muted">Esta funcionalidad estar√° disponible en una versi√≥n futura.</p>
                    
                    <div class="form-group">
                        <label for="nueva-nota" class="form-label">Agregar Nota</label>
                        <textarea id="nueva-nota" class="form-control" rows="3" placeholder="Escribe una nota sobre este contacto..." disabled></textarea>
                    </div>
                    
                    <button type="button" class="btn btn-primary" disabled>
                        üìù Agregar Nota
                    </button>
                </div>
            </div>
            -->
        </div>
    </main>

    <script src="/js/main.js"></script>
    <script src="/js/main.js?v=1.0.0"></script>
    <script>
        // Inicializar funcionalidades espec√≠ficas de la p√°gina de edici√≥n
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-enfocar el primer campo
            var nombreInput = document.getElementById('nombre');
            if (nombreInput) nombreInput.focus();

            // Confirmar antes de eliminar
            var deleteForm = document.querySelector('form[action*="/eliminar"]');
            if (deleteForm) {
                deleteForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    var contactName = '<%= contacto.nombre %>';
                    if (confirm(`¬øEst√°s seguro de que quieres eliminar a ${contactName}?\n\nEsta acci√≥n no se puede deshacer.`)) {
                        this.submit();
                    }
                });
            }

            // Detectar cambios en el formulario principal de edici√≥n
            var editForm = document.querySelector('form[action="/contactos/<%= contacto.id %>"]');
            if (editForm) {
                var inputs = editForm.querySelectorAll('input, select, textarea');
                var hasChanges = false;
                inputs.forEach(function(input) {
                    input.addEventListener('input', function() {
                        hasChanges = true;
                    });
                });
                // Advertir antes de salir si hay cambios no guardados
                window.addEventListener('beforeunload', function(e) {
                    if (hasChanges) {
                        e.preventDefault();
                        e.returnValue = '';
                        return '';
                    }
                });
                // No mostrar advertencia al enviar el formulario
                editForm.addEventListener('submit', function() {
                    hasChanges = false;
                });
            }
        });
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'CRM B√°sico' %></title>
    <link rel="stylesheet" href="/css/styles.css?v=1.0.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>üè¢ CRM B√°sico</h1>
            <p>Sistema de gesti√≥n de contactos y clientes</p>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <!-- Mensajes de notificaci√≥n -->
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="alert alert-success fade-in">
                    ‚úÖ <%= message %>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error fade-in">
                    ‚ùå <%= error %>
                </div>
            <% } %>

            <!-- Estad√≠sticas -->
            <div class="stats-grid">
                <div class="stat-card stat-total">
                    <span class="stat-number"><%= stats.total %></span>
                    <span class="stat-label">Total Contactos</span>
                </div>
                <div class="stat-card success stat-clientes">
                    <span class="stat-number"><%= stats.clientes %></span>
                    <span class="stat-label">Clientes</span>
                </div>
                <div class="stat-card warning stat-prospectos">
                    <span class="stat-number"><%= stats.prospectos %></span>
                    <span class="stat-label">Prospectos</span>
                </div>
                <div class="stat-card danger stat-inactivos">
                    <span class="stat-number"><%= stats.inactivos %></span>
                    <span class="stat-label">Inactivos</span>
                </div>
            </div>

            <!-- B√∫squeda -->
            <div class="card">
                <div class="card-header">
                    <h2>üîç Buscar Contactos</h2>
                </div>
                <div class="card-body">
                    <form action="/buscar" method="GET" class="search-form">
                        <div class="form-row">
                            <div class="form-group">
                                <div class="search-input">
                                    <span class="search-icon">üîç</span>
                                    <input 
                                        type="text" 
                                        id="search-input"
                                        name="q" 
                                        class="form-control" 
                                        placeholder="Buscar por nombre, correo o empresa..."
                                        value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                                    >
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    Buscar
                                </button>
                                <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                                    <a href="/" class="btn btn-outline" id="clear-search">
                                        Limpiar
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Formulario para agregar contacto -->
            <div class="card">
                <div class="card-header">
                    <h2>‚ûï Agregar Nuevo Contacto</h2>
                </div>
                <div class="card-body">
                    <form action="/contactos" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="nombre" class="form-label">Nombre *</label>
                                <input 
                                    type="text" 
                                    id="nombre" 
                                    name="nombre" 
                                    class="form-control" 
                                    placeholder="Nombre completo"
                                    required
                                    minlength="2"
                                    maxlength="255"
                                    aria-labelledby="nombre-label"
                                >
                            </div>
                            <div class="form-group">
                                <label for="correo" class="form-label">Correo Electr√≥nico *</label>
                                <input 
                                    type="email" 
                                    id="correo" 
                                    name="correo" 
                                    class="form-control" 
                                    placeholder="ejemplo@correo.com"
                                    required
                                    aria-labelledby="correo-label"
                                >
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="telefono" class="form-label">Tel√©fono</label>
                                <input 
                                    type="tel" 
                                    id="telefono" 
                                    name="telefono" 
                                    class="form-control" 
                                    placeholder="+1 (555) 123-4567"
                                    oninput="CRM.formatPhoneInput(this)"
                                    aria-labelledby="telefono-label"
                                >
                            </div>
                            <div class="form-group">
                                <label for="empresa" class="form-label">Empresa</label>
                                <input 
                                    type="text" 
                                    id="empresa" 
                                    name="empresa" 
                                    class="form-control" 
                                    placeholder="Nombre de la empresa"
                                    maxlength="255"
                                    aria-labelledby="empresa-label"
                                >
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="estado" class="form-label">Estado</label>
                                <select id="estado" name="estado" class="form-control form-select" aria-labelledby="estado-label">
                                    <option value="prospecto">üîç Prospecto</option>
                                    <option value="cliente">‚úÖ Cliente</option>
                                    <option value="inactivo">üò¥ Inactivo</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-success">
                                    ‚ûï Agregar Contacto
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>


            <!-- Posts de API externa (demo) -->
            <% if (posts && posts.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h2>üì∞ Noticias del Sector</h2>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-lg">√öltimas publicaciones obtenidas de fuentes externas:</p>
                        <ul class="posts-list">
                            <% posts.forEach(function(post) { %>
                                <li class="post-item">
                                    <h4 class="post-title"><%= post.title %></h4>
                                    <p class="post-body"><%= post.body.substring(0, 150) %>...</p>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <script src="/js/main.js"></script>
    <script src="/js/main.js?v=1.0.0"></script>
</body>
</html>
